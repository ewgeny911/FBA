using System;
using System.Drawing;
using System.Windows.Forms;
using System.IO;     
using System.Collections.Generic;    
namespace FBA
{
    ///Новая прикладная форма.
    public partial class FormNew : FormSim
    {
        public int    StatusClose = 0;
        public string FormName       = "";
        public string ProjectTemplate = "";
        public FormNew()
        {
            InitializeComponent();               
            foreach (var ProjectName in Directory.GetDirectories(sys.PathTemplate, "*", SearchOption.TopDirectoryOnly)) 
            {
                listBoxTemplate.Items.Add(Path.GetFileNameWithoutExtension(ProjectName));
            }            
         }                    
                            
        private void BtnOkClick(object sender, EventArgs e)
        {
            if (listBoxTemplate.SelectedIndex == -1)
            {
                sys.SM("Введите шаблон для формы!");
                return;
            }
             
            FormName = tbFormName.Text;
            if (FormName == "") 
            {
                sys.SM("Введите имя формы!");
                return;
            }
             
            StatusClose = 1;                      
            ProjectTemplate = listBoxTemplate.Items[listBoxTemplate.SelectedIndex].ToString();                   
            Close();
        }
        
        private void btnCancelClick(object sender, EventArgs e)
        {
            StatusClose = 2;
            FormName = "";
            ProjectTemplate = "";
            Close();
        }
                            
    }
}
